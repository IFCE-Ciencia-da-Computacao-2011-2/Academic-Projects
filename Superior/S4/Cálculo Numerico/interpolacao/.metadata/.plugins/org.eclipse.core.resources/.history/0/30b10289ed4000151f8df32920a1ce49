package interpolacao.newton.tabela_diferenca;

import java.util.ArrayList;
import java.util.List;
import java.util.Optional;

import interpolacao.Coordenada;
import interpolacao.Coordenadas;

public class TabelaDeDiferencasDivididas {
	private Coordenadas raizes;
	private List<Ordem> ordens;

	public TabelaDeDiferencasDivididas(Coordenadas coordenadas) {
		this.raizes = coordenadas;

		gerarOrdem(coordenadas);
	}

	private List<Ordem> gerarOrdem(Coordenadas coordenadas) {
		Optional<Ordem> ordemPonteiro = Optional.of(GeradorOrdemZero.gerarPara(coordenadas));

		List<Ordem> ordens = new ArrayList<>();

		while (ordemPonteiro.isPresent()) {
			ordens.add(ordemPonteiro);
			ordemPonteiro = ordemPonteiro.gerarOrdem();
		}

		return ordens;
	}
}
