		for (Termo termo : termos) {
			
		}
		return null;
	}

	public Polinomio multiplica(Polinomio outro) {
		return null;
	}

	public String toString() {
		StringBuilder builder = new StringBuilder();
		for (Termo termo : termos)
			builder.append(" " + termo);

		return builder.toString();
	}
}