package interpolacao;

import java.util.ArrayList;
import java.util.Iterator;
import java.util.List;

public class Coordenadas implements Iterable<Coordenada> {

	private List<Coordenada> raizes;

	public Coordenadas() {
		this.raizes = new ArrayList<Coordenada>();
	}

	public Coordenadas add(double fDeX, double x) {
		this.raizes.add(new Coordenada(x, fDeX));
		return this;
	}

	@Override
	public Iterator<Coordenada> iterator() {
		return raizes.iterator();
	}
	
	public int size() {
		return raizes.size();
	}
}
